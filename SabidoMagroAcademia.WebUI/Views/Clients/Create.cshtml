        </div>
        <div style=display: inline-flex; width: 100%;">
            <div class="form-group" style=" width: 50%; margin: 0;">
                <label asp-for="Gender" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="Gender">
                        <option value="Masculino">Masculino</option>
                        <option value="Feminino">Feminino</option>
                        <option value="Feminino">Outro</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group" style="width: 50%; margin: 0;">
                <label asp-for="Born" class="col-md-4 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Born" class="form-control" />
                    <span asp-validation-for="Born" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Image" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group text-right">
            <div class="col-md-offset-2 col-md-10">
                <a asp-action="Index" class="btn btn-info">Voltar</a>
                <input type="submit" value="Criar" class="btn btn-success" />
            </div>
        </div>
    </div>

