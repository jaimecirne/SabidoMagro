@model SabidoMagroAcademia.Application.DTOs.ClientDTO

<h2>Registrar novo Cliente</h2>

<form asp-action="Create">

    <div class="form-horizontal">

        <hr />

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="User.Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="User.Name" class="form-control" />
                <span asp-validation-for="User.Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="User.Email" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="User.Email" class="form-control" />
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="User.Image" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="User.Image" class="form-control" />
                <span asp-validation-for="User.Image" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Avaliations.Last().Weight" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Avaliations.Last().Weight" class="form-control" />
                <span asp-validation-for="Avaliations.Last().Weight" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Avaliations.Last().Height" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Avaliations.Last().Height" class="form-control" />
                <span asp-validation-for="Avaliations.Last().Height" class="text-danger"></span>
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info">Back to List</a>
            </div>
        </div>
    </div>
</form>
