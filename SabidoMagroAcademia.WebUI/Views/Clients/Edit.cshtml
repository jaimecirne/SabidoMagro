@model SabidoMagroAcademia.Application.DTOs.ClientDTO

<h3>Editar cliente</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Clients" asp-route-id="@Model.Id">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="User.Name" class="control-label">Nome</label>
                <input asp-for="User.Name" class="form-control" />
                <span asp-validation-for="User.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="User.Email" class="control-label"></label>
                <input asp-for="User.Email" class="form-control" />
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="User.Fone" class="control-label">Contato</label>
                <input asp-for="User.Fone" class="form-control" />
                <span asp-validation-for="User.Fone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="User.Gender" class="col-md-2 control-label">Gênero</label>
                <select asp-for="User.Gender" class="form-control">
                    <option value="Masculino">Masculino</option>
                    <option value="Feminino">Feminino</option>
                    <option value="Feminino">Outro</option>
                </select>
                <span asp-validation-for="User.Gender" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="User.Born" class="col-md-2 control-label">Data de nascimento</label>
                <input asp-for="User.Born" class="form-control" />
                <span asp-validation-for="User.Born" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="User.Image" class="control-label">Foto</label>
                <input asp-for="User.Image" class="form-control" />
                <span asp-validation-for="User.Image" class="text-danger"></span>
            </div>


            <div class="form-group">
                <a asp-action="Index" class="btn btn-warning">Voltar</a>
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>