    anychart.onDocumentReady(function () {

        // create a data set
        var data = anychart.data.set([
            ["Segunda", 10000, 12500],
            ["Terça", 12000, 15000],
            ["Quarta", 13000, 16500],
            ["Quinta", 10000, 13000],
            ["Sexta", 14000, 10000],
            ["Sábado", 10000, 13000],
        ]);

        // map the data
        var seriesData_1 = data.mapAs({ x: 0, value: 1 });
        var seriesData_2 = data.mapAs({ x: 0, value: 2 });
        var seriesData_3 = data.mapAs({ x: 0, value: 3 });

        // create a chart
        var chart = anychart.barmekko();

        // create the first series
        var series1 = chart.mekko(seriesData_1);

        // create the first series and set the data
        var series1 = chart.mekko(seriesData_1);

        // create the second series and set the data
        var series2 = chart.mekko(seriesData_2);

        // create the second series and set the data
        var series3 = chart.mekko(seriesData_3);

        // set the chart title
        /*chart.title("Bar Mekko Chart: Multiple serties");*/

        // set the container id
        chart.container("container");

        // initiate drawing the chart
        chart.draw();
    });
</script>

